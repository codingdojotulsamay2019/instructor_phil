@model Trail

<div class="row">
    <a class="btn btn-warning" href="/">Go Home</a>
</div>
<div class="row">
    <div class="col-12 text-white">
        <form method="post" action="/trail">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" placeholder="Enter a Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Description" class="form-control" placeholder="Enter a Description" cols="30" rows="10"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Length" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Length" class="form-control" placeholder="Enter a Length">
                    <span class="text-danger" asp-validation-for="Length"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Elevation" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Elevation" class="form-control" placeholder="Enter a Elevation">
                    <span class="text-danger" asp-validation-for="Elevation"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Longitude" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Longitude" class="form-control" placeholder="Enter a Longitude">
                    <span class="text-danger" asp-validation-for="Longitude"></span>
                </div>
                <label asp-for="Latitude" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Latitude" class="form-control" placeholder="Enter a Latitude">
                    <span class="text-danger" asp-validation-for="Latitude"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>